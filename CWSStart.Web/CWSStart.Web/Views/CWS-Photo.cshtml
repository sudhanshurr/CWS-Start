@using CWSStart.Web.CWSExtensions
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "CWS-Master.cshtml";
}

<h2>@Model.Content.Name</h2>
<img src="@Model.Content.GetProperty("photo").Value"/>

<h4>
    Photo taken by
    <em>
        <a href="@Model.Content.GetProperty("photoCreditLink").Value" target="_blank">
            @Model.Content.GetProperty("photoCredit").Value
        </a>
    </em>
</h4>


<ul class="pager">
    @if (Model.Content.Previous() != null)
    {
        <li class="previous">
            <a href="@Model.Content.Previous().Url">&larr; @DictionaryHelper.GetDictItem("Previous","Previous")</a>
        </li>
    }
    else
    {
        <li class="previous disabled">
            <a href="#">&larr; @DictionaryHelper.GetDictItem("Previous","Previous")</a>
        </li>
    }
    
    
    @if (Model.Content.Next() != null)
    {
        <li class="next">
            <a href="@Model.Content.Next().Url">@DictionaryHelper.GetDictItem("Next","Next") &rarr;</a>
        </li>
    }
    else
    {
        <li class="next disabled">
            <a href="#">@DictionaryHelper.GetDictItem("Next","Next") &rarr;</a>
        </li>
    }
</ul>